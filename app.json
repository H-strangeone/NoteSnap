{
  "name": "GoalSync",
  "description": "Social goal tracking app with progress visualization and team collaboration",
  "repository": "https://github.com/yourusername/goalsync",
  "logo": "https://via.placeholder.com/512x512.png?text=GoalSync",
  "keywords": ["goal", "tracking", "productivity", "social", "collaboration"],
  "image": "heroku/nodejs",
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node.js environment",
      "value": "production"
    },
    "SESSION_SECRET": {
      "description": "Session secret key (32+ random characters)",
      "generator": "secret"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL from Supabase"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Deployment complete! Set up your Supabase database using the schema in DEPLOYMENT_GUIDE.md'"
  }
}